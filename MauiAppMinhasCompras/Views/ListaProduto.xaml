<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Somar_Clicked" />
        <ToolbarItem Text="Editar" Clicked="ToolbarItem_Editar_Clicked" />
        <ToolbarItem Text="Excluir" Clicked="ToolbarItem_Excluir_Clicked" />
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Adicionar_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10">

        <SearchBar x:Name="searchBar"
                   Placeholder="Digite para buscar"
                   TextChanged="SearchBar_TextChanged" />

        <ListView x:Name="lst_produtos"
                  IsPullToRefreshEnabled="True"
                  ItemSelected="lst_produtos_ItemSelected"
                  Refreshing="lst_produtos_Refreshing">

            <ListView.Header>
                <Grid ColumnDefinitions="30, 100, 80, 50, 90"
                      BackgroundColor="LightGray"
                      Padding="5">
                    <Label Grid.Column="0" Text="ID" FontAttributes="Bold" />
                    <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold" />
                    <Label Grid.Column="2" Text="Preço" FontAttributes="Bold" />
                    <Label Grid.Column="3" Text="Qnt" FontAttributes="Bold" />
                    <Label Grid.Column="4" Text="Total" FontAttributes="Bold" />
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover"
                                      Clicked="MenuItem_Remover_Clicked"
                                      IsDestructive="True" />
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="30, 100, 80, 50, 90"
                              Padding="5">
                            <Label Grid.Column="0" Text="{Binding Id}" />
                            <Label Grid.Column="1" Text="{Binding Descricao}" />
                            <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:C}'}" />
                            <Label Grid.Column="3" Text="{Binding Quantidade}" />
                            <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:C}'}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Label x:Name="lblTotalGeral"
               FontAttributes="Bold"
               FontSize="Medium"
               HorizontalOptions="Center"
               Margin="10" />

    </StackLayout>
</ContentPage>
